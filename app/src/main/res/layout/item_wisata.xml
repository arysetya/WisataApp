<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="220dp">
    <ImageView
        android:id="@+id/iv_gambar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_namaLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="nama lokasi"
        android:padding="10dp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/tv_namaTempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_namaLokasi"
        android:text="nama Tempat"
        android:padding="10dp"
        android:textSize="19sp"
        android:textColor="@color/colorBlack"/>

</RelativeLayout>